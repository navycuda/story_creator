<nav class="navbar">
  <div class="navbar_left">
    <img src="http://supersmellasoaps.ca/images/headerImage.png" class="logo">
    <footer class="menu_bar_left">
    <div class="menu">
      <a href="/" >Home</a>
      <% if (!user.id) { %>
        <a id="newest-stories" >New</a>
        <a id="most-popular">Popular</a>
      <% } else { %>
        <a id="newest-stories">New</a>
        <a id="most-popular">Popular</a>
        <a id="my-stories">My Stories</a>
      <% } %>
    </div>
  </footer>
</div>
<footer class="menu_bar_right">
<div class="navbar_right">
    <input type="hidden" id="user-id">
    <header>
      <% if (!user.id) { %>
        <div class="login-component">
            <form class="user_login" action="/login/" method="POST">
              <input
                class="form-control"
                type="email"
                name="email"
                placeholder="email"
              />
              <input
                class="form-control"
                type="password"
                name="password"
                placeholder="password"
              />
              <button type="submit" class="btn btn-primary">Login</button>
            </form>
        </div>
      <% } else { %>
      <div class="username_logout">
        <div class="username"><%= user.name %></div>
      <button id="user-logout" class="logout" type="submit">logout</button>
      <% } %>
      </div>
    </header>
  </div>
    </footer>
</nav>
