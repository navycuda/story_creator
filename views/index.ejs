    <div class="navbar_right">
        <input type="hidden" id="user-id" value="<%= user.id %>" />
        <header>
          <% if (!user.id) { %>
            <div class="login-component">
                <form class="user_login" action="/login" method="POST">
                  <input
                    class="form-control"
                    type="email"
                    name="email"
                    placeholder="email"
                  />
                  <input
                    class="form-control"
                    type="password"
                    name="password"
                    placeholder="password"
                  />
                  <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
          <% } else { %>
          <a href="new_story" title="start a new story"> + </a>
          <div><%= user.id %></div>
          <button class="logout" type="submit">logout</button>
          <% } %>
        </div>
        </footer>
